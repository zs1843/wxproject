}  
.game-over {
  position: absolute;
  z-index: 3;
  background-color: rgba(255, 255, 255, 0.8);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  padding-top: 20vw;
  box-sizing: border-box;
} 
.game-over text {
  display: block;
}
